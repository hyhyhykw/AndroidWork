<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/clean_header_color"
    android:layout_height="match_parent" >
    <TextView
            android:id="@+id/txt_clean_total_mem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/clean_total_mem"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_file_mgr_total_mem_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_clean_total_mem"
            android:layout_toLeftOf="@+id/txt_clean_total_mem"
            android:text="@string/txt_already_found" />

</RelativeLayout>
